<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bac">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E4E0E0"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:id="@+id/loginText"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#08156A"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Logged in from Google Account)"
                android:id="@+id/tvAccount"
                android:visibility="gone"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="#696767"/>

            <ImageView
                android:id="@+id/Edit_photo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:src="@drawable/create"
                android:layout_marginRight="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/Edit_CivilNo"
                android:drawableLeft="@drawable/perm"
                android:drawablePadding="8dp"
                android:hint="Civil No"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/Edit_username"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="8dp"
                android:hint="Username"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/Edit_Email"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/Edit_buttAcc"
                android:text="Update Account"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#C0C5CF"
                app:cornerRadius="20dp"

                android:textColor="@color/black"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/Edit_buttPass"
                android:text="Update Password"
                android:textSize="18sp"
                android:backgroundTint="#C0C5CF"
                app:cornerRadius="20dp"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>